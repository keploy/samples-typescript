{
    "name": "express-postgres-todo",
    "version": "1.0.0",
    "description": "Advanced Todo API with PostgreSQL 18+ for testing large queries and responses",
    "main": "dist/index.js",
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "build": "tsc",
        "start": "node dist/index.js",
        "generate": "prisma generate",
        "migrate": "prisma migrate dev --name",
        "migrate:deploy": "prisma migrate deploy",
        "db:push": "prisma db push",
        "db:seed": "tsx src/seed.ts",
        "test:api": "./scripts/test-api.sh"
    },
    "dependencies": {
        "@prisma/client": "^6.1.0",
        "express": "^4.21.0",
        "cors": "^2.8.5",
        "helmet": "^8.0.0",
        "morgan": "^1.10.0",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/morgan": "^1.9.9",
        "@types/node": "^22.10.2",
        "prisma": "^6.1.0",
        "tsx": "^4.19.2",
        "typescript": "^5.7.2"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}