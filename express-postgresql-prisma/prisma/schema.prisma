generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // directUrl is only required for Supabase session connection pooler
  // directUrl = env("DIRECT_URL")
}

model Task {
  id    Int @id @default(autoincrement())
  author  String
  title   String
  description   String
  dueDate   String
  status  String
  priority  Int?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}